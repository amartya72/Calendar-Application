<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c_10.calendarapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.Activities.CalendarActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.Activities.ManageEventsActivity"
            android:label="@string/title_activity_manage_events"
            android:parentActivityName=".ui.Activities.CalendarActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Activities.CalendarActivity" />
        </activity>
        <activity
            android:name=".ui.Activities.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.Activities.YearlyActivity"
            android:label="@string/title_activity_yearly"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.Activities.WeeklyActivity"
            android:label="@string/title_activity_weekly"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ui.Activities.DailyActivity"
            android:label="@string/title_activity_daily"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
